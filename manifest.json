{
    "name": "TAL Downloader",
    "description": "Download This American Life Episodes",
    "version": "1.0",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "icons": { 
        "16": "icon.png",
        "48" : "icon.png",
        "128" : "icon.png" 
    },
    "page_action": {
        "default_icon": "icon.png",
        "default_title": "Download This American Life Episodes"
    },
    "permissions": [
        "activeTab",
        "downloads",
        "declarativeContent"
    ],
    "author": "Philip Adeoye http://philipadeoye.com"
}